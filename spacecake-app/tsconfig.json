{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["electron", "vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "e2e/**/*.ts", "forge.env.d.ts"],
  "exclude": ["tests/fixtures/**"]
}
