---
import { LinkButton } from "@astrojs/starlight/components"

import EditorPreview from "./EditorPreview.astro"
import GitHubDownloadButton from "./GitHubDownloadButton.astro"
import PlatformDownloads from "./PlatformDownloads.astro"
import RotatingText from "./RotatingText.astro"
import TaskTablePreview from "./TaskTablePreview.astro"
import TerminalPreview from "./TerminalPreview.astro"

// https://github.com/withastro/starlight/blob/main/packages/starlight/constants.ts
const PAGE_TITLE_ID = "_top"

const { data } = Astro.locals.starlightRoute.entry
const { title = data.title, tagline } = data.hero || {}

// only autoplay and loop in prod
// to reduce mux usage
// const autoplay = import.meta.env.PROD ? "muted" : false
// const loop = import.meta.env.PROD ? true : false
---

<div class="hero">
  <div class="sl-flex stack">
    <div class="sl-flex copy">
      <h1 id={PAGE_TITLE_ID} data-page-title set:html={title} />
      <div class="rotating-text-wrapper">
        <RotatingText items={["Claude Code"]} />
      </div>
      <div class="badges-container">
        <a
          href="https://github.com/spacecake-labs/spacecake"
          class="badge open-source-badge"
        >
          <svg class="badge-icon" fill="currentColor" viewBox="0 0 16 16">
            <path
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            ></path>
          </svg>
          open source
        </a>
        <span class="badge public-alpha-badge">public alpha</span>
      </div>
      {tagline && <div class="tagline" set:html={tagline} />}
    </div>

    {
      (
        <div class="sl-flex actions">
          <GitHubDownloadButton platform="macos-arm64" />
          <div class="desktop-only">
            <GitHubDownloadButton platform="macos-x64" />
          </div>
        </div>
      )
    }

    <PlatformDownloads />

    <div class="cta-container">
      <LinkButton href="/getting-started" variant="secondary">
        get started
      </LinkButton>
    </div>
  </div>

  <div class="editor-preview">
    <EditorPreview />
  </div>

  <!-- Features Section -->
  <div
    class="terminal-feature col-span-full w-full mt-48 space-y-16 overflow-hidden"
  >
    <!-- Section Header -->
    <div class="text-left lg:text-center space-y-4">
      <h2 class="text-4xl font-bold section-heading">built for the terminal</h2>
      <p class="text-zinc-400 text-lg max-w-2xl mx-auto">
        track your context window and usage cost in real time
      </p>
    </div>

    <!-- Integrated Terminal Feature -->
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-6" style="min-width: 0;">
        <div class="inline-block">
          <span
            class="inline-flex items-center px-3 py-1 bg-emerald-500/10 text-emerald-400 border border-emerald-500/20 rounded-md font-mono text-xs font-medium"
          >
            integrated terminal
          </span>
        </div>
        <h3 class="text-3xl font-bold section-heading">
          everything you need in one glance
        </h3>
        <p class="text-zinc-400 text-lg leading-relaxed">
          run Claude Code in the integrated terminal (Ghostty)
        </p>
        <ul class="space-y-3 text-zinc-400">
          <li class="flex items-start gap-3">
            <span class="text-emerald-500 mt-1">&#10003;</span>
            <span>Claude knows which file you're editing</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-emerald-500 mt-1">&#10003;</span>
            <span>see your context window and usage cost in real time</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-emerald-500 mt-1">&#10003;</span>
            <span>more integrations coming soon</span>
          </li>
        </ul>
      </div>

      <div style="min-width: 0;">
        <TerminalPreview />
      </div>
    </div>
  </div>

  <!-- Task Tracking Feature -->
  <div
    class="terminal-feature task-feature col-span-full w-full mt-48 space-y-16 overflow-hidden"
  >
    <!-- Section Header -->
    <div class="text-left lg:text-center space-y-4">
      <h2 class="text-4xl font-bold section-heading">monitor claude tasks</h2>
      <p class="text-zinc-400 text-lg max-w-2xl mx-auto">
        see what Claude is working on in real time
      </p>
    </div>

    <!-- Task Table Feature -->
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-6" style="min-width: 0;">
        <div class="inline-block">
          <span
            class="inline-flex items-center px-3 py-1 bg-emerald-500/10 text-emerald-400 border border-emerald-500/20 rounded-md font-mono text-xs font-medium"
          >
            task table
          </span>
        </div>
        <h3 class="text-3xl font-bold section-heading">keep agents on track</h3>
        <p class="text-zinc-400 text-lg leading-relaxed">
          Claude creates tasks as it works
        </p>
        <ul class="space-y-3 text-zinc-400">
          <li class="flex items-start gap-3">
            <span class="text-emerald-500 mt-1">&#10003;</span>
            <span>see pending, in-progress, and completed tasks</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-emerald-500 mt-1">&#10003;</span>
            <span>filter by status to focus on what matters</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-emerald-500 mt-1">&#10003;</span>
            <span>tasks sync automatically with claude code</span>
          </li>
        </ul>
      </div>

      <div style="min-width: 0;">
        <TaskTablePreview />
      </div>
    </div>
  </div>
</div>

<style>
  @layer starlight.core {
    .hero {
      display: grid;
      align-items: start;
      gap: 2rem;
      padding-bottom: 1rem;
      width: 100%;
      max-width: 1600px;
      margin-inline: auto;
      padding-inline: 2rem;
    }

    .hero > img,
    .hero > .hero-html {
      object-fit: contain;
      width: 100%;
      max-width: 600px;
      height: auto;
      margin-inline: 0;
    }

    .hero > .editor-preview {
      width: 100%;
      max-width: 100%;
    }

    .stack {
      flex-direction: column;
      align-items: flex-start;
      gap: clamp(1.5rem, calc(1.5rem + 1vw), 2rem);
      text-align: left;
    }

    .copy {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .copy > * {
      max-width: 100%;
    }

    .rotating-text-wrapper {
      margin-top: -1rem;
      margin-bottom: 1rem;
      width: 100%;
      min-width: max-content;
    }

    .badges-container {
      display: flex;
      align-items: center;
      justify-content: flex-start;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    .badge {
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
      padding: 0.125rem 0.5rem;
      border-radius: 0.375rem;
      border: 1px solid transparent;
      font-family: var(--__sl-font-mono);
      font-size: 0.6875rem;
      font-weight: 500;
      letter-spacing: 0.02em;
      text-transform: lowercase;
      white-space: nowrap;
      text-decoration: none;
      transition: all 0.2s ease;
    }

    .open-source-badge {
      background: transparent;
      border: 1px solid rgba(74, 222, 128, 0.5);
      color: rgb(74, 222, 128);
    }

    .open-source-badge:hover {
      border-color: rgba(74, 222, 128, 0.7);
    }

    :global([data-theme="light"]) .open-source-badge {
      color: var(--sl-color-text);
    }

    .badge-icon {
      width: 0.75rem;
      height: 0.75rem;
    }

    .public-alpha-badge {
      background: transparent;
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: rgba(255, 255, 255, 0.7);
    }

    :global([data-theme="light"]) .public-alpha-badge {
      border: 1px solid rgba(0, 0, 0, 0.2);
      color: rgba(0, 0, 0, 0.7);
    }

    .stack > .status-badge {
      align-self: flex-start;
    }

    .copy h1 {
      font-size: clamp(
        var(--sl-text-3xl),
        calc(0.25rem + 5vw),
        var(--sl-text-6xl)
      );
      line-height: var(--sl-line-height-headings);
      font-weight: 600;
      color: var(--sl-color-white);
      max-width: 100%;
    }

    .tagline {
      font-size: clamp(
        var(--sl-text-base),
        calc(0.0625rem + 2vw),
        var(--sl-text-xl)
      );
      color: var(--sl-color-gray-2);
    }

    .actions {
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: flex-start;
    }

    .desktop-only {
      display: none;
    }

    @media (min-width: 60rem) {
      .desktop-only {
        display: block;
      }
    }

    .status-badge {
      display: inline-flex;
      align-items: center;
      padding: 3px 10px;
      background: color-mix(in srgb, var(--sl-color-accent) 10%, transparent);
      border: 1px solid
        color-mix(in srgb, var(--sl-color-accent) 30%, transparent);
      border-radius: 999px; /* full pill shape */
      font-family: "Monaco", "Courier New", monospace;
      font-size: 0.7rem;
      font-weight: 500;
      letter-spacing: 0.02em;
      color: var(--sl-color-accent);
      text-transform: lowercase;
      white-space: nowrap;
    }

    .cta-container {
      margin-top: 1rem;
    }

    .terminal-feature {
      grid-column: 1 / -1;
      margin-top: 4rem !important;
    }

    .terminal-feature.task-feature {
      margin-top: 12rem !important;
    }

    /* Override Starlight spacing for terminal feature section */
    .terminal-feature.space-y-16 > * + * {
      margin-top: 4rem !important;
    }

    .terminal-feature .space-y-6 > * + * {
      margin-top: 1.5rem !important;
    }

    .terminal-feature .space-y-4 > * + * {
      margin-top: 1rem !important;
    }

    .terminal-feature .space-y-3 > * + * {
      margin-top: 0.75rem !important;
    }

    .terminal-feature .gap-12 {
      gap: 3rem !important;
    }

    .terminal-feature .gap-3 {
      gap: 0.75rem !important;
    }

    .terminal-feature h2,
    .terminal-feature h3 {
      margin: 0 !important;
      padding: 0 !important;
    }

    .section-heading {
      color: white;
    }

    :global([data-theme="light"]) .section-heading {
      color: var(--sl-color-text);
    }

    .terminal-feature p {
      margin: 0 !important;
    }

    @media (max-width: 1023px) {
      .terminal-feature .text-left {
        text-align: left !important;
      }
    }

    @media (min-width: 1024px) {
      .terminal-feature .lg\:text-center {
        text-align: center !important;
      }

      .terminal-feature .lg\:text-center p {
        margin-left: auto !important;
        margin-right: auto !important;
      }
    }

    .terminal-feature ul {
      margin: 0 !important;
      padding: 0 !important;
      list-style: none !important;
    }

    .terminal-feature li {
      margin: 0 !important;
      padding: 0 !important;
    }

    @media (min-width: 70rem) {
      .hero {
        grid-template-columns: 1fr 1.8fr;
        gap: 3rem;
        padding-block: clamp(2.5rem, calc(1rem + 10vmin), 10rem);
        padding-inline: 3rem;
        align-items: start;
      }

      .hero > img,
      .hero > .hero-html {
        width: 100%;
        max-width: none;
        align-self: start;
      }

      .hero > .editor-preview {
        width: 100%;
        max-width: none;
      }

      .stack {
        text-align: start;
        align-items: flex-start;
        max-width: none;
      }

      .copy {
        align-items: flex-start;
      }

      .badges-container {
        justify-content: flex-start;
      }

      .actions {
        flex-direction: row;
        gap: 1rem 2rem;
        flex-wrap: wrap;
        justify-content: flex-start;
        align-items: flex-start;
      }
    }
  }
</style>
