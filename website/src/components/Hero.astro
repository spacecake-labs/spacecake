---
import { LinkButton } from "@astrojs/starlight/components"

import EditorPreview from "./EditorPreview.astro"
import GitHubDownloadButton from "./GitHubDownloadButton.astro"
import PlatformDownloads from "./PlatformDownloads.astro"
import RotatingText from "./RotatingText.astro"

// https://github.com/withastro/starlight/blob/main/packages/starlight/constants.ts
const PAGE_TITLE_ID = "_top"

const { data } = Astro.locals.starlightRoute.entry
const { title = data.title, tagline } = data.hero || {}

// only autoplay and loop in prod
// to reduce mux usage
// const autoplay = import.meta.env.PROD ? "muted" : false
// const loop = import.meta.env.PROD ? true : false
---

<div class="hero">
  <div class="sl-flex stack">
    <div class="sl-flex copy">
      <h1 id={PAGE_TITLE_ID} data-page-title set:html={title} />
      <div class="rotating-text-wrapper">
        <RotatingText items={["Claude Code"]} />
      </div>
      <div class="badges-container">
        <a
          href="https://github.com/spacecake-labs/spacecake"
          class="badge open-source-badge"
        >
          <svg class="badge-icon" fill="currentColor" viewBox="0 0 16 16">
            <path
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            ></path>
          </svg>
          open source
        </a>
        <span class="badge public-alpha-badge">public alpha</span>
      </div>
      {tagline && <div class="tagline" set:html={tagline} />}
    </div>

    {
      (
        <div class="sl-flex actions">
          <GitHubDownloadButton platform="macos-arm64" />
          <GitHubDownloadButton platform="macos-x64" />
        </div>
      )
    }

    <PlatformDownloads />

    <div class="cta-container">
      <LinkButton href="/getting-started" variant="secondary">
        get started
      </LinkButton>
    </div>
  </div>

  <div class="editor-preview">
    <EditorPreview />
  </div>
</div>

<style>
  @layer starlight.core {
    .hero {
      display: grid;
      align-items: center;
      gap: 1rem;
      padding-bottom: 1rem;
      max-width: 80rem;
      margin-inline: auto;
    }

    .hero > img,
    .hero > .hero-html,
    .hero > .editor-preview {
      object-fit: contain;
      width: 100%;
      height: auto;
      margin-inline: auto;
    }

    .stack {
      flex-direction: column;
      gap: clamp(1.5rem, calc(1.5rem + 1vw), 2rem);
      text-align: center;
    }

    .copy {
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }

    .copy > * {
      max-width: 50ch;
    }

    .rotating-text-wrapper {
      margin-top: -1rem;
      margin-bottom: 1rem;
    }

    .badges-container {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    .badge {
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
      padding: 0.125rem 0.5rem;
      border-radius: 0.375rem;
      border: 1px solid transparent;
      font-family: var(--__sl-font-mono);
      font-size: 0.6875rem;
      font-weight: 500;
      letter-spacing: 0.02em;
      text-transform: lowercase;
      white-space: nowrap;
      text-decoration: none;
      transition: all 0.2s ease;
    }

    .open-source-badge {
      background: transparent;
      border: 1px solid rgba(74, 222, 128, 0.5);
      color: rgb(74, 222, 128);
    }

    .open-source-badge:hover {
      border-color: rgba(74, 222, 128, 0.7);
    }

    :global([data-theme="light"]) .open-source-badge {
      color: var(--sl-color-text);
    }

    .badge-icon {
      width: 0.75rem;
      height: 0.75rem;
    }

    .public-alpha-badge {
      background: transparent;
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: rgba(255, 255, 255, 0.7);
    }

    :global([data-theme="light"]) .public-alpha-badge {
      border: 1px solid rgba(0, 0, 0, 0.2);
      color: rgba(0, 0, 0, 0.7);
    }

    .stack > .status-badge {
      align-self: flex-start;
    }

    .copy h1 {
      font-size: clamp(
        var(--sl-text-3xl),
        calc(0.25rem + 5vw),
        var(--sl-text-6xl)
      );
      line-height: var(--sl-line-height-headings);
      font-weight: 600;
      color: var(--sl-color-white);
      max-width: 15ch;
      text-wrap: balance;
    }

    .tagline {
      font-size: clamp(
        var(--sl-text-base),
        calc(0.0625rem + 2vw),
        var(--sl-text-xl)
      );
      color: var(--sl-color-gray-2);
    }

    .actions {
      gap: 1rem 2rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .status-badge {
      display: inline-flex;
      align-items: center;
      padding: 3px 10px;
      background: color-mix(in srgb, var(--sl-color-accent) 10%, transparent);
      border: 1px solid
        color-mix(in srgb, var(--sl-color-accent) 30%, transparent);
      border-radius: 999px; /* full pill shape */
      font-family: "Monaco", "Courier New", monospace;
      font-size: 0.7rem;
      font-weight: 500;
      letter-spacing: 0.02em;
      color: var(--sl-color-accent);
      text-transform: lowercase;
      white-space: nowrap;
    }

    .cta-container {
      margin-top: 1rem;
    }

    @media (min-width: 50rem) {
      .hero {
        grid-template-columns: 1fr 1fr;
        gap: 3%;
        padding-block: clamp(2.5rem, calc(1rem + 10vmin), 10rem);
        align-items: start;
      }

      .hero > img,
      .hero > .hero-html,
      .hero > .editor-preview {
        width: 100%;
        align-self: start;
      }

      .stack {
        text-align: start;
        width: 100%;
        max-width: 38rem;
        margin-inline: auto;
      }

      .copy {
        align-items: flex-start;
      }

      .badges-container {
        justify-content: flex-start;
      }

      .actions {
        justify-content: flex-start;
      }
    }
  }
</style>
