---
import { getCollection } from "astro:content"

import Footer from "../../components/Footer.astro"
import Nav from "../../components/Nav.astro"

const blogEntries = await getCollection("blog")

// filter out noindex posts and sort by publishedAt (most recent first)
const sortedEntries = blogEntries
  .filter((entry) => !entry.data.noindex)
  .sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime())

const formatDate = (date: Date) =>
  date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  })
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog | spacecake</title>
    <meta
      name="description"
      content="Articles about AI-assisted coding, developer workflows, and building better software with spacecake."
    />
    <link rel="canonical" href={Astro.url.href} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content="Blog | spacecake" />
    <meta
      property="og:description"
      content="Articles about AI-assisted coding, developer workflows, and building better software with spacecake."
    />
    <meta property="og:site_name" content="spacecake" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="Blog | spacecake" />
    <meta
      name="twitter:description"
      content="Articles about AI-assisted coding, developer workflows, and building better software with spacecake."
    />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Geist:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- Analytics -->
    <script
      src="https://analytics.ahrefs.com/analytics.js"
      data-key="TJwISHtBcWir5M/lRBkKWw"
      async></script>
  </head>

  <body>
    <Nav active="blog" />

    <main class="main">
      <div class="container">
        <!-- Header -->
        <header class="header">
          <h1>blog</h1>
          <p class="subtitle">
            Articles about AI-assisted coding, developer workflows, and building
            better software.
          </p>
        </header>

        <!-- Articles Grid -->
        <div class="articles-grid">
          {
            sortedEntries.map((entry) => (
              <a href={`/blog/${entry.id}`} class="article-card">
                <div class="article-meta">
                  <span class="tags">
                    {entry.data.tags.slice(0, 3).join(" Â· ")}
                  </span>
                  <time datetime={entry.data.publishedAt.toISOString()}>
                    {formatDate(entry.data.publishedAt)}
                  </time>
                </div>
                <h2>{entry.data.title}</h2>
                <p>{entry.data.description}</p>
              </a>
            ))
          }
        </div>

        {
          sortedEntries.length === 0 && (
            <div class="empty-state">
              <p>no posts yet. check back soon!</p>
            </div>
          )
        }
      </div>
    </main>

    <Footer />
  </body>
</html>

<style>
  :root {
    --font-sans:
      "Geist", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    --color-bg: #0a0a0a;
    --color-bg-elevated: #141414;
    --color-text: #fafafa;
    --color-text-muted: #a1a1a1;
    --color-border: #262626;
    --color-accent: #10b981;
    --max-width: 64rem;
    --nav-height: 4.5rem;
  }

  :root[data-theme="light"] {
    --color-bg: #ffffff;
    --color-bg-elevated: #f5f5f5;
    --color-text: #0a0a0a;
    --color-text-muted: #525252;
    --color-border: #e5e5e5;
    --color-accent: #059669;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: var(--font-sans);
    background: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  /* Main */
  .main {
    flex: 1;
    padding: 3rem 0 2rem;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Header */
  .header {
    margin-bottom: 3rem;
  }

  .header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    max-width: 40rem;
  }

  /* Articles Grid */
  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .article-card {
    display: block;
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    padding: 1.5rem;
    text-decoration: none;
    transition:
      border-color 0.2s,
      transform 0.2s;
  }

  .article-card:hover {
    border-color: #404040;
    transform: translateY(-2px);
  }

  .article-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
    font-size: 0.8125rem;
  }

  .tags {
    color: var(--color-accent);
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    min-width: 0;
  }

  .article-meta time {
    color: var(--color-text-muted);
    flex-shrink: 0;
  }

  .article-card h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .article-card p {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 640px) {
    .header h1 {
      font-size: 1.875rem;
    }

    .articles-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
